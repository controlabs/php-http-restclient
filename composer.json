{
    "name": "controlabs/http-restclient",
    "type": "library",
    "description": "PHP HTTP Restclient",
    "keywords": ["PHP", "http", "client"],
    "homepage": "https://github.com/controlabs/php-http-restclient",
    "license": [
        "MIT"
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "autoload": {
        "psr-4": {
            "Controlabs\\": "src/"
        }
    },
    "scripts": {
        "cs": "phpcs --standard=PSR2 src",
        "test": "phpunit -c phpunit.xml --colors=always",
        "test-cover": "phpunit --coverage-text",
        "phpstan": "phpstan analyse src --level=7"
    },
    "config": {
        "bin-dir": "bin"
    }
}
